<h1>Edit {{content.name}} <small>{{content.url}}</small> {{#linkTo 'sites.show' content class="btn btn-primary pull-right"}} <span class="glyphicon glyphicon-arrow-left"></span> Back to {{content.name}}{{/linkTo}}</h1>

<div class="row">
  <div class="col-lg-12">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="inputEmail" class="col-lg-2 control-label">Name</label>
        <div class="col-lg-10">
          {{view Ember.TextField valueBinding="content.name" classBinding=":form-control" placeholder="Name"}}
        </div>
      </div>
      
      <div class="form-group">
        <label for="inputEmail" class="col-lg-2 control-label">Url</label>
        <div class="col-lg-10">
          {{view Ember.TextField valueBinding="content.url"  classBinding=":form-control" placeholder="Url"}}
        </div>
      </div>
      
      <fieldset>
        <legend>Settings</legend>
       
        <div class="form-group">
          <label for="inputEmail" class="col-lg-2 control-label">Job Interval</label>
          <div class="col-lg-10">
            {{view Ember.TextField valueBinding="content.setting.interval" classBinding=":form-control" placeholder="Interval"}}
          </div>
        </div>  
       
        <div class="form-group">
          <label for="inputEmail" class="col-lg-2 control-label">Active</label>
          <div class="col-lg-10">
            {{view Ember.Checkbox checkedBinding="content.setting.active" }}
          </div>
        </div>
      </fieldset>
    
     <button type="button" class="btn btn-primary" {{action 'updateSite'}}>Create Site</button>
    </form>
  </div>
</div>
