<h1>New Site</h1>

<div class="row">
  <div class="col-lg-12">
    <form class="form-horizontal">
      <div class="form-group">
        <label for="inputEmail" class="col-lg-2 control-label">Name</label>
        <div class="col-lg-10">
          {{view Ember.TextField valueBinding="content.name" classBinding=":form-control" placeholder="Name"}}
        </div>
      </div>
  
      <div class="form-group">
        <label for="inputEmail" class="col-lg-2 control-label">Url</label>
        <div class="col-lg-10">
          {{view Ember.TextField valueBinding="content.url"  classBinding=":form-control" placeholder="Url"}}
        </div>
      </div>
    
      <button type="button" class="btn btn-primary" {{action 'createSite'}}>Create Site</button>
    </form>
  </div>
</div>